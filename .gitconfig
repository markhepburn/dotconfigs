[user]
    name = Mark Hepburn
    email = Mark.Hepburn@gmail.com
[alias]
    st = status
    ci = commit
    co = checkout
    lol = log --pretty=oneline --abbrev-commit --graph --decorate --all
    dlp = diff ORIG_HEAD..FETCH_HEAD
    llp = log ORIG_HEAD..FETCH_HEAD
[color]
    ui = auto

# http://www.hodique.info/blog/2011/03/20/git_tip_url_rewriting
[url "git@github.com:markhepburn/"]
    pushInsteadOf = https://github.com/markhepburn/

[help]
    autocorrect = prompt

[init]
    defaultBranch = main
[branch]
    sort = -committerdate
# http://stevenharman.net/git-pull-with-automatic-rebase
#     autosetuprebase = always
[tag]
    sort = version:refname
[pull]
    rebase = false              # default merge instead of rebase
[push]
    default = simple
    autoSetupRemote = true
    followTags = true
[fetch]
    prune = true
    pruneTags = true
    all = true
[include]
    path = ~/.gitconfig.private

[column]
    ui = auto

[core]
    excludesfile = ~/.gitignore
    attributesfile = ~/.gitattributes
    pager = delta
    fsmonitor = true
    untrackedCache = true
[merge]
    conflictstyle = diff3
[diff]
    algorithm = histogram
    colorMoved = default
    mnemonicPrefix = true
    renames = true
[diff "common-lisp"]
    xfuncname="^\\((def\\S+\\s+\\S+)"
    
[diff "elisp"]
    xfuncname="^\\((((def\\S+)|use-package)\\s+\\S+)"

[github]
	user = markhepburn
[credential]
# cd /usr/share/doc/git/contrib/credential/libsecret/; sudo make
	helper = /usr/share/doc/git/contrib/credential/libsecret/git-credential-libsecret

# delta stuff: https://github.com/dandavison/delta
[interactive]
    diffFilter = delta --color-only
[delta]
    navigate = true    # use n and N to move between diff sections
[merge]
    conflictstyle = zdiff3
